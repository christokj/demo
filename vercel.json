{
    "version": 2,
    "builds": [
        {
            "src": "frontend/package.json",
            "config": {
                "distDir": "frontend/dist"
            }
        },
        {
            "src": "backend/src/server.js",
            "use": "@vercel/node"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "backend/src/server.js"
        },
        {
            "source": "/(.*)",
            "destination": "frontend/dist/index.html"
        }
    ]
}